# .env.example
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/gamestore

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT (Generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Encryption (Generate with: openssl rand -hex 32)
CREDENTIAL_ENCRYPTION_KEY=your-32-byte-hex-key-here
CREDENTIAL_ENCRYPTION_SALT=your-salt-here

# Xendit
XENDIT_SECRET_KEY=xnd_development_your-key-here
XENDIT_WEBHOOK_TOKEN=your-webhook-verification-token

# KYC (Verihubs or Privy)
KYC_API_KEY=your-kyc-api-key
KYC_API_URL=https://api.verihubs.com

# Image Upload
MAX_IMAGE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp